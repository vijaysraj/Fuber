<%= render :partial => 'layouts/header'%>
<div class='container'>
  <table class='table table-bordered'>
    <thead>
      <tr>
        <th> Cab no </th>
        <th> Latitude </th>
        <th> Longitude </th>
        <th> Availablity </th>
        <th> Color </th>
      </tr>
    </thead>
    <tbody>
    <% @available_cabs.each do |cab| %>
      <tr>
        <td> <%= cab.id%> </td>
        <td> <%= cab.latitude%> </td>
        <td> <%= cab.longitude%> </td>
        <td> <%= cab.availability ? 'Yes' : 'No' %> </td>
        <td> <%= cab.color.capitalize %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>